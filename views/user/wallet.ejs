<style>
  /* General Layout */
.transactions {
  margin-top: 20px;
  background-color: #f9f9f9;
  border-radius: 8px;
  padding: 20px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.transactions h2 {
  font-size: 1.5rem;
  color: #333;
  margin-bottom: 15px;
}

/* Header Styling */
.transaction-header {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  font-weight: bold;
  color: #555;
  border-bottom: 1px solid #ddd;
  padding-bottom: 10px;
  margin-bottom: 10px;
}

.transaction-header span {
  text-align: center;
}

/* Transaction Rows */
.transaction {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  align-items: center;
  border-bottom: 1px solid #eee;
  padding: 10px 0;
}

.transaction:last-child {
  border-bottom: none;
}

.transaction-type,
.transaction-amount,
.transaction-date {
  text-align: center;
  font-size: 0.95rem;
  color: #444;
}

/* Credit/Debit Styling */
.transaction-type.credit {
  color: #4caf50;
  font-weight: bold;
}

.transaction-type.debit {
  color: #f44336;
  font-weight: bold;
}

/* Amount Styling */
.transaction-amount {
  font-family: "Roboto Mono", monospace;
  font-size: 1rem;
}

/* Date Styling */
.transaction-date {
  font-size: 0.85rem;
  color: #888;
}

/* Responsive Design */
@media (max-width: 768px) {
  .transaction-header,
  .transaction {
    grid-template-columns: 1fr;
    text-align: left;
    padding: 10px 0;
  }

  .transaction-type,
  .transaction-amount,
  .transaction-date {
    text-align: left;
  }

  .transaction-header span {
    margin-bottom: 5px;
  }
}

</style>


