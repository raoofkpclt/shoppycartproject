}
/* General Styling */
.header {
    position: relative;
    z-index: 10;
    background: #fff;
    padding: 10px 0;
}

/* Flexbox Alignment for Header Content */
.header__content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: nowrap; /* Ensure everything stays on one line */
}

/* Logo Styling */
.header__logo img {
    max-height: 40px;
    max-width: 150px;
}

/* Navigation Menu Styling */
.header__menu ul {
    display: flex;
    list-style: none;
    gap: 20px;
    margin: 0;
    padding: 0;
}

.header__menu ul li {
    position: relative;
}

.header__menu ul li a {
    text-decoration: none;
    color: #333;
    padding: 5px 10px;
    font-weight: 600;
    transition: color 0.3s;
}

.header__menu ul li a:hover {
    color: #007bff; /* Highlight on hover */
}

/* Dropdown Styling */
.header__menu ul li .dropdown {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    background: #fff;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    padding: 10px;
    list-style: none;
}

.header__menu ul li:hover .dropdown {
    display: block;
}

/* Right Options Styling */
.header__nav__option {
    display: flex;
    align-items: center;
    gap: 15px;
}

.header__nav__option .search-bar {
    padding: 5px;
    border: 1px solid #ddd;
    border-radius: 4px;
    width: 150px;
}

.header__nav__option a img {
    height: 20px;
}

/* Responsive Design for Smaller Screens */
@media (max-width: 768px) {
    .header__content {
        flex-wrap: wrap; /* Stack items on smaller screens */
    }

    .header__menu ul {
        flex-direction: column;
        gap: 10px;
    }

    .header__nav__option {
        justify-content: space-between;
        width: 100%;
    }

    .header__nav__option .search-bar {
        flex-grow: 1;
    }
}

</style>
