<header class="header" style="box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
    <div class="container">
       
            <!-- Logo Section -->
            <div class="header__logo">
                <a href="/user/">
                    <img style="height: 30px; width: 140px;" src="/image/Shoppycartfinel.png" alt="ShoppyCart Logo">
                </a>
            </div>
          
          
     
